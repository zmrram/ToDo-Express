<!DOCTYPE html>
<html lang="en">

<head>
    <title>Todo List</title>
    <% include partials/links %>
    <script src = "/js/todo.js"></script>
</head>
<body>
    <div class="container">
        <% include partials/nav %>
            <div class="row">
                <div class="col-lg-12">
                    <% include partials/errormsgs %>
                    <h2 class="page-header">Todo List</h2>
                    <form method="post" action="/todo">
                        <div class="input-group">
                            <input type="text" class="form-control" name = "item" placeholder="Add stuff...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">Add</button>
                            </span>
                            </div><!-- /input-group -->
                    </form>
                    <div>
                        <table class = "table table-hover">
                             <thead>
                                <tr><th>Things To Do</th></tr>       
                            </thead>
                            <tbody>
                                <% if (todolist) { todolist.list.forEach(function(item){ %>
                                    <tr>
                                        <th><%= item.item %></th>
                                        <th><button class="btn btn-success" name="clear">Clear</button></th>
                                    </tr> 
                                <% });} %>    
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <% include partials/footer %>
    </div>
    <!-- /container -->
</body>

</html>